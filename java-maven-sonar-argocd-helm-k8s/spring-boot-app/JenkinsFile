pipeline {
  agent {
    docker {
      image 'hattyhatty288/jenkins-agent:v1'
      args '--user root -v /var/run/docker.sock:/var/run/docker.sock' // mount Docker socket to access the host's Docker daemon
    }
  }
  stages {
    stage('Checkout') {
      steps {
        git branch: 'main', url: 'https://github.com/HattyHe/Jenkins-Zero-To-Hero.git'
      }
    }
    stage('Build and Test') {
      steps {
        sh 'ls -ltr'
        // build the project and create a JAR file
        sh 'cd java-maven-sonar-argocd-helm-k8s/spring-boot-app && mvn clean package'
      }
    }
    stage('Static Code Analysis') {
      environment {
      SONAR_URL = "http://54.197.151.35:9000"
      }
      steps {
        withCredentials([string(credentialsId: 'sonarqube', variable: 'SONAR_AUTH_TOKEN')]) {
          sh """
            echo "Installing Java 17 for SonarQube scanner..."
            apt-get update -y
            apt-get install -y openjdk-17-jdk

            export JAVA_HOME=/usr/lib/jvm/java-17-openjdk-amd64
            export PATH=\$JAVA_HOME/bin:\$PATH
            export SONAR_HOST_URL=${SONAR_URL}

            java -version
            echo "Java 17 installed and active."

            cd java-maven-sonar-argocd-helm-k8s/spring-boot-app
            mvn sonar:sonar \
              -Dsonar.login=$SONAR_AUTH_TOKEN \
              -Dsonar.host.url=\$SONAR_HOST_URL
          """
        }
      }
    } 

    stage('Build and Push Docker Image') {
      environment {
        DOCKER_IMAGE = "hattyhatty288/ultimate-cicd:${BUILD_NUMBER}"
        // DOCKERFILE_LOCATION = "java-maven-sonar-argocd-helm-k8s/spring-boot-app/Dockerfile"
        REGISTRY_CREDENTIALS = credentials('docker-cred')
      }
      steps {
        script {
            sh 'cd java-maven-sonar-argocd-helm-k8s/spring-boot-app && docker build -t ${DOCKER_IMAGE} .'
            def dockerImage = docker.image("${DOCKER_IMAGE}")
            docker.withRegistry('https://index.docker.io/v1/', "docker-cred") {
                dockerImage.push()
            }
        }
      }
    }
    stage('Update Deployment File') {
        environment {
            GIT_REPO_NAME = "Jenkins-Zero-To-Hero"
            GIT_USER_NAME = "HattyHe"
        }
        steps {
            withCredentials([string(credentialsId: 'github', variable: 'GITHUB_TOKEN')]) {
                sh """
                    set -x
                    echo "=== Debugging Git Repository ==="
                    pwd
                    echo "=== Checking .git directory ==="
                    ls -la .git || echo ".git directory not found"
                    echo "=== Checking if .git is a directory ==="
                    test -d .git && echo ".git is a directory" || echo ".git is NOT a directory"
                    echo "=== Checking git version ==="
                    git --version || echo "git command not found"
                    echo "=== Checking git status ==="
                    git status || echo "git status failed"
                    echo "=== Checking .git/config ==="
                    cat .git/config || echo ".git/config not found"
                    echo "=== Setting git config ==="
                    git config user.email "hatty.he@outlook.com" || echo "Failed to set user.email"
                    git config user.name "HattyHe" || echo "Failed to set user.name"
                    echo "=== Updating deployment file ==="
                    sed -i "s/replaceImageTag/\${BUILD_NUMBER}/g" java-maven-sonar-argocd-helm-k8s/spring-boot-app-manifests/deployment.yml
                    echo "=== Git add ==="
                    git add java-maven-sonar-argocd-helm-k8s/spring-boot-app-manifests/deployment.yml
                    echo "=== Git commit ==="
                    git commit -m "Update deployment image to version \${BUILD_NUMBER}"
                    echo "=== Git push ==="
                    git push https://\${GITHUB_TOKEN}@github.com/\${GIT_USER_NAME}/\${GIT_REPO_NAME} HEAD:main
                """
            }
        }
    }
  }
}
